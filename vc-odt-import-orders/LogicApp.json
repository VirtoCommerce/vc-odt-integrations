                                ]
                              }
                            }
                          },
                          "required": [
                            "price",
                            "quantity",
                            "sku",
                            "name",
                            "currency",
                            "dynamicProperties"
                          ]
                        }
                      }
                    },
                    "required": [
                      "order",
                      "products"
                    ]
                  }
                },
                "method": "POST"
              }
            }
          },
          "contentVersion": "1.0.0.0",
          "outputs": {}
        },
        "parameters": {}
      }
    }
  ],
  "outputs": {}
}